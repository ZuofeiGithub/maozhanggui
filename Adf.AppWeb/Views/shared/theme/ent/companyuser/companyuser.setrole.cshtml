@using Adf.FrameWork.Service.LayUi
@using CYQ.Data.Table
@{
    //2018.10.19 创建 侯鑫辉
    //企业用户设置角色

    /*系统参数*/
    Layout = "../master/master.detail.cshtml";
    MDataRow curGlobalUserLogin = ViewBag.GlobalUserLogin ?? new MDataRow();
    String curGlobalUserCode = ViewBag.GlobalUserCode ?? "";
    String curGlobalModuleCode = ViewBag.GlobalModuleCode ?? "";
    MDataTable curGlobalUserPermission = ViewBag.GlobalUserPermission ?? new MDataTable();
    MDataRow curGlobalModuleEntity = ViewBag.GlobalModuleEntity ?? new MDataRow();
    String curGlobalAdminResPath = ViewBag.GlobalAdminResPath ?? "";

    /*当前业务*/
    String curDoCmd = ViewBag.CurrentCmd;
    String curController = "/ent/companyuser";
    MDataRow curDrMainEntity = ViewBag.DrMainEntity ?? new MDataRow();
}

@section FormButton
{
    @Html.LayUiStdButton(new LayUiButtonAttr()
                         {
                             Caption = "保存",
                             Id = "btnSubmit",
                             LayUiButtonSize = LayUiButtonSize.Default,
                             LayUiButtonTheme = LayUiButtonTheme.Warm,
                             ExtHtmlAttributes = new { lay_submit = "", lay_filter = "btnSubmit" }
                         })
    @Html.LayUiStdButton(new LayUiButtonAttr() { Id = "btnClose", Caption = "关闭" })
}

@section FormBody
{
    @using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.Row }))
    {
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "账号" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "uid", Val = curDrMainEntity.Get("uid", ""), IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "姓名" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "username", Val = curDrMainEntity.Get("username", ""), IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "手机号" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "cellphone", Val = curDrMainEntity.Get("cellphone", ""), IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "备注" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "remark", Val = curDrMainEntity.Get("remark", ""), IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "启用状态" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    string status = curDrMainEntity.Get("status", "");
                    string statusStr = "";
                    if (status == "0")
                    {
                        statusStr = "禁用";
                    }
                    if (status == "1")
                    {
                        statusStr = "启用";
                    }
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "status", Val = statusStr, IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "是否有权创建项目" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    string iscreateproject = curDrMainEntity.Get("iscreateproject", "");
                    string iscreateprojectStr = "";
                    if (iscreateproject == "0")
                    {
                        iscreateprojectStr = "不允许";
                    }
                    if (iscreateproject == "1")
                    {
                        iscreateprojectStr = "允许";
                    }
                    @Html.LayUiStdInput(new LayUiInputAttr() { Id = "iscreateproject", Val = iscreateprojectStr, IsReadOnly = true })
                }
            }
        }
        using (Html.LayUiStdContainer(new LayUiContainerAttr() { ClassName = "layui-col-xs12 layui-col-md6" }))
        {
            using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.FormItem }))
            {
                @Html.LayUiStdLabel(new LayUiLabelAttr() { Caption = "所属角色" })
                using (Html.LayUiStdContainer(new LayUiContainerAttr() { LayUiContainerType = LayUiContainerType.InputBlock }))
                {
                    @Html.LayUiStdCheckGroup(new LayUiCheckBoxGroupAttr() { Name = "userrolecodes", Texts = ViewBag.roleNameStrs ?? "", Values = ViewBag.roleCodeStrs ?? "", Vals = ViewBag.AllRoleOfUser ?? "" })
                }
            }
        }
    }
    @Html.Hidden("usercode", curDrMainEntity.Get("usercode", ""))
}

@section MainBottom
{
    <script>
        layui.config({
            base: '@curGlobalAdminResPath/layuiadmin/lib/' //静态资源所在路径
        }).use(['layer', 'form', 'adfCommon','upload'], function () {
            var layer = layui.layer,
                form = layui.form,
                upload = layui.upload,
                adfCommon = layui.adfCommon;

            //自定义验证
            form.verify({

            });

            //保存
            form.on('submit(btnSubmit)', function (obj) {
                var sUrl = "@curController/execute?docmd=@curDoCmd";
                var param = obj.field;

                var rolecodes = [];
                $("input:checkbox[name='userrolecodes']:checked").each(function () { 
                    var rolecode = $(this).val();
                    rolecodes.push(rolecode);
                });
                param.userrolecodes = rolecodes.join(",");

                adfCommon.ajaxSyncPost(sUrl, param, function (retData) {
                    adfCommon.msgDo(retData.RetValue, function () {
                        if (retData.RetStatus == 100) {
                            //刷新父级数据
                            parent.curRetDoCmd = retData.RetStatus;
                            //关闭当前窗口
                            adfCommon.dlgClose();
                        }
                    });
                }, function () {
                    adfCommon.alert("网络存在异常,请重试");
                });
            });

            //关闭
            $("#btnClose").click(function() {adfCommon.dlgClose();});
        });
    </script>

}
