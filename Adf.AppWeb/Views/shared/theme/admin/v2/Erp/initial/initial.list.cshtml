@using Adf.Core.Util
@using Adf.FrameWork.Interface.Entity
@using Adf.FrameWork.Service
@using Adf.FrameWork.Service.HtmlHelperEx
@using CYQ.Data.Table
@{
    
    /*系统参数*/
    Layout = "../../../../master/v2/master.list.cshtml";
    MDataRow curGlobalApp = ViewBag.GlobalApp ?? new MDataRow();
    MDataRow curGlobalUserLogin = ViewBag.GlobalUserLogin ?? new MDataRow();
    String curGlobalUserCode = ViewBag.GlobalUserCode ?? "";
    String curGlobalModuleCode = ViewBag.GlobalModuleCode ?? "";
    MDataTable curGlobalUserPermission = ViewBag.GlobalUserPermission ?? new MDataTable();
    MDataRow curGlobalModuleEntity = ViewBag.GlobalModuleEntity ?? new MDataRow();
    String curGlobalAdminResPath = ViewBag.GlobalAdminResPath ?? "";

    //页面参数    
    String curController = "/renterp/initial";


    //自定义参数
    
}

@section MainHeader
{
}

@section MainQuery
{
    <div class="layui-inline">
        <label class="layui-form-label">期初单号:</label>
        <div class="layui-inline">
            @Html.LayUiInput("initialno","initialno")
         </div>
    </div>
    <div class="layui-inline">
        <label class="layui-form-label">制单人:</label>
        <div class="layui-inline">
             @Html.LayUiInput("initialusername","initialusername")
        </div>
    </div>
    <div class="layui-inline">
        <div class="layui-inline">
            @Html.LayUiSamllButton("搜 索","btnSearch")
        </div>
    </div>
}

@section MainTool
{
    @Html.LayUiSetPermissionButton(curGlobalUserPermission, "add",LayerUiHtmlHelper.GetEvent("add"),LayUiButtonColor.Normal)
}

@section MainTableRowTool
{
    @*@Html.LayUiSetPermissionButton(curGlobalUserPermission, "modify",LayerUiHtmlHelper.GetEvent("modify"),LayUiButtonColor.Normal)
    @Html.LayUiSetPermissionButton(curGlobalUserPermission, "delete",LayerUiHtmlHelper.GetEvent("delete"),LayUiButtonColor.Danger)*@
    @Html.LayUiSetPermissionButton(curGlobalUserPermission, "view",LayerUiHtmlHelper.GetEvent("view"),LayUiButtonColor.Normal)
}

@section MainBottom
{
    <script>

        var curRetDoCmd = "";


        layui.config({
            base: '@curGlobalAdminResPath/layuiadmin/lib/' //静态资源所在路径
        }).use(['table', 'layer', 'element', 'adfCommon'], function() {
            var table = layui.table,
                layer = layui.layer,
                element = layui.element,
                adfCommon = layui.adfCommon;

            /*函数*/
            //重新加载数据
            function reloadData() {
                //条件
                var sWhere = {};
                sWhere.initialno = $("#initialno").val();
                sWhere.initialusername = $("#initialusername").val();

                //重新加载
                adfCommon.reloadStdTable(table, sWhere);
            }

            /*表格信息*/
            //列
            var colInfo = [
                [
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'initialno', width: 150, title: '期初单号' }
                    , { field: 'initialusername', width: 100, title: '制单人' }
                    , { field: 'remark', title: '备注' }
                    , { width: 110, title: '操作', fixed: 'right', toolbar: '#tableRowTool' } //设置固定
                ]
            ];
            //数据
            var dataUrl = "@curController/getlistdata";
            var pageSize = 20;

            //初始查询条件
            var sWhere = {};
            //初始化
            adfCommon.setStdTable(table, colInfo, dataUrl, pageSize, sWhere, function(row) {
                var rowData = row.data;
                if (row.event == 'modify') {
                    curRetDoCmd = "";
                    var productcode = rowData.productcode;
                    var sUrl = "@curController/detail?docmd=modify&productcode=" + productcode + "&mccode=@curGlobalModuleCode";
                    adfCommon.dlgOpen("修改信息", sUrl, '100%', '100%', function () {
                        if (curRetDoCmd == "101") {
                            reloadData();
                        }
                    });

                } else if (row.event == 'delete') {
                    layer.confirm('确认要删除吗?', function(index) {
                        var productcode = rowData.productcode;
                        var sUrl = "@curController/execute?docmd=delete";
                        var param = {};
                        param.productcode = productcode;

                        adfCommon.ajaxSyncPost(sUrl, param, function (retData) {
                            adfCommon.alert(retData.RetValue);
                            if (retData.RetStatus == 103) {
                                //关闭对话框
                                layer.close(index);

                                //数据库删除成功后,在界面上进行删除.
                                row.del();
                            }
                        }, function() {});
                        
                    });
                } else if (row.event == 'view') {
                    curRetDoCmd = "";
                    var initialcode = rowData.initialcode;
                    var sUrl = "@curController/detail?docmd=view&initialcode=" + initialcode+"&mccode=@curGlobalModuleCode";
                    adfCommon.dlgOpen("查看信息", sUrl, '100%', '100%', function () {
                        if (curRetDoCmd == "101") {
                            reloadData();
                        }
                    });

                }
            });

            /*事件*/
            $(".btnSearch").click(function() {
                reloadData();
            });

            //增加
            $(".add").click(function() {
                var sUrl = "@curController/detail?docmd=add&mccode=@curGlobalModuleCode";
                curRetDoCmd = "";;
                adfCommon.dlgOpen("增加信息", sUrl, '100%', '100%', function() {
                    if (curRetDoCmd == "100") {
                        reloadData();
                    }
                });
            });
            

        });

    </script>
}




