@using Adf.Core.Util
@using Adf.FrameWork.Interface.Entity
@using Adf.FrameWork.Service
@using Adf.FrameWork.Service.HtmlHelperEx
@using CYQ.Data.Table
@{

    /*系统参数*/
    Layout = "../../../master/v2/master.list.cshtml";
    MDataRow curGlobalApp = ViewBag.GlobalApp ?? new MDataRow();
    MDataRow curGlobalUserLogin = ViewBag.GlobalUserLogin ?? new MDataRow();
    String curGlobalUserCode = ViewBag.GlobalUserCode ?? "";
    String curGlobalModuleCode = ViewBag.GlobalModuleCode ?? "";
    MDataTable curGlobalUserPermission = ViewBag.GlobalUserPermission ?? new MDataTable();
    MDataRow curGlobalModuleEntity = ViewBag.GlobalModuleEntity ?? new MDataRow();
    String curGlobalAdminResPath = ViewBag.GlobalAdminResPath ?? "";

    /*页面*/
    String curController = "/erp/attr";
    String curProductTypeCode = ViewBag.ProductTypeCode ?? "";

}

@section MainHeader
{
}

@section MainQuery
{
     <div class="layui-inline">
        <div class="layui-inline">
            @Html.LayUiSamllButton("刷新", "btnRefresh")
        </div>
    </div>
}

@section MainTool
{
   @Html.LayUiSetPermissionButton(curGlobalUserPermission, "add",LayerUiHtmlHelper.GetEvent("add"),LayUiButtonColor.Normal)
}

@section MainTableRowTool
{
    @Html.LayUiSetPermissionButton(curGlobalUserPermission, "modify",LayerUiHtmlHelper.GetEvent("modify"),LayUiButtonColor.Normal)
    @Html.LayUiSetPermissionButton(curGlobalUserPermission, "delete", LayerUiHtmlHelper.GetEvent("delete"), LayUiButtonColor.Danger)
}

@section MainBottom
{


    <script>

        var curRetDoCmd = "";


        layui.config({
            base: '@curGlobalAdminResPath/layuiadmin/lib/' //静态资源所在路径
        }).use(['table', 'layer', 'element', 'adfCommon'], function() {
            var table = layui.table,
                layer = layui.layer,
                element = layui.element,
                adfCommon = layui.adfCommon;

            /*函数*/
            //重新加载数据
            function reloadData() {
                //条件
                var sWhere = {};
                sWhere.brandname = $("#brandname").val();

                //重新加载
                adfCommon.reloadStdTable(table, sWhere);
            }


            /*表格信息*/
            //列
            var colInfo = [
                [
                    { type: 'checkbox', fixed: 'left' }
                    , { field: 'attrcode', title: '属性编码' }
                    , { field: 'attrname', width: 100,title: '属性名称' }
                    , { width: 110, title: '操作', fixed: 'right', toolbar: '#tableRowTool' } //设置固定
                ]
            ];

            //数据
            var dataUrl = "@curController/getlistdata?producttypecode=@curProductTypeCode";
            var pageSize = 20;

            //初始查询条件
            var sWhere = {};
            //初始化
            adfCommon.setStdTable(table, colInfo, dataUrl, pageSize, sWhere, function(row) {
                var rowData = row.data;
                if (row.event == 'modify') {
                    var attrcode = rowData.attrcode;
                    var producttypecode = rowData.producttypecode;
                    var sUrl = "@curController/detail?docmd=modify&producttypecode=" + producttypecode + "&attrcode=" + attrcode + "&mccode=@curGlobalModuleCode";
                    adfCommon.dlgOpen("修改品牌信息", sUrl, '90%', '90%', function () {
                        if (globalData.RetStatus == "101") {
                            reloadData();
                        }
                    });

                } else if (row.event == 'delete') {
                    layer.confirm('确认要删除吗?', function(index) {
                        var attrcode = rowData.attrcode;
                        var producttypecode = rowData.producttypecode;
                        var sUrl = "@curController/execute?docmd=delete";
                        var param = {};
                        param.attrcode = attrcode;
                        param.producttypecode = producttypecode;

                        adfCommon.ajaxSyncPost(sUrl, param, function(retData) {
                            adfCommon.alert(retData.RetValue);
                            if (retData.RetStatus == 103) {
                                //关闭对话框
                                layer.close(index);

                                //数据库删除成功后,在界面上进行删除.
                                row.del();
                            }
                        }, function() {});

                    });
                } 
            });

            /*事件*/
            $(".btnSearch").click(function() {
                reloadData();
            });

            //增加
            $(".add").click(function() {
                var sUrl = "@curController/detail?docmd=add&mccode=@curGlobalModuleCode&producttypecode=@curProductTypeCode" ;
                adfCommon.dlgOpen("增加信息", sUrl, '90%', '90%', function() {
                    if (globalData.RetStatus == "100") {
                        reloadData();
                    }
                });
            });

            //刷新数据
            $(".btnRefresh").on("click", function() {
                reloadData();
            });
            //回车执行查询
            $("body").on("keypress", function (e) {
                if (e.keyCode == 13) {
                    reloadData();
                }
            });
        });

    </script>
}




